{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    // Add the following rewrites section *within* "hosting"
    "rewrites": [ {
      "source": "/create", "function": "createApp",
      "source": "/:app", "function": "getApp"
    } ]
  }
}